#!/bin/bash

#cd generator
#java -jar generator.jar sample.mesh -mt irregular -np 2000 -lr 10

if pwd == "*/a2---mesh-generator-team-40"
then
    cd island
elif pwd == "*/visualizer"
then
    cd ../island
elif pwd == "*/generator"
then
    cd ../island
fi

